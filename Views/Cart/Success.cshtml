@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div style="max-width: 800px; margin: 50px auto; padding: 40px; background: white; border-radius: 15px; box-shadow: 0 4px 20px rgba(0,0,0,0.1); text-align: center;">
    <div style="margin-bottom: 30px;">
        <i class="fas fa-check-circle" style="font-size: 100px; color: #10b981;"></i>
    </div>

    <h1 style="font-size: 36px; color: #1f2937; margin-bottom: 15px;">🎉 Đặt hàng thành công!</h1>
    <p style="font-size: 18px; color: #6b7280; margin-bottom: 40px;">
        Cảm ơn bạn đã đặt hàng. Chúng tôi sẽ liên hệ với bạn sớm nhất.
    </p>

    <div style="background: #f9fafb; border-radius: 10px; padding: 30px; margin-bottom: 30px; text-align: left;">
        <h2 style="font-size: 24px; color: #1f2937; margin-bottom: 20px; text-align: center;">Thông tin đơn hàng</h2>

        <div style="display: flex; justify-content: space-between; padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
            <strong>Họ và tên:</strong>
            <span>@TempData["CustomerName"]</span>
        </div>

        <div style="display: flex; justify-content: space-between; padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
            <strong>Số điện thoại:</strong>
            <span>@TempData["CustomerPhone"]</span>
        </div>

        @if (!string.IsNullOrEmpty(TempData["CustomerEmail"]?.ToString()))
        {
            <div style="display: flex; justify-content: space-between; padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
                <strong>Email:</strong>
                <span>@TempData["CustomerEmail"]</span>
            </div>
        }

        <div style="display: flex; justify-content: space-between; padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
            <strong>Địa chỉ:</strong>
            <span>@TempData["CustomerAddress"]</span>
        </div>

        <div style="display: flex; justify-content: space-between; padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
            <strong>Hình thức:</strong>
            <span>@TempData["DeliveryType"]</span>
        </div>

        <div style="display: flex; justify-content: space-between; padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
            <strong>Thanh toán:</strong>
            <span>@TempData["PaymentMethod"]</span>
        </div>

        @if (!string.IsNullOrEmpty(TempData["Note"]?.ToString()))
        {
            <div style="display: flex; justify-content: space-between; padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
                <strong>Ghi chú:</strong>
                <span>@TempData["Note"]</span>
            </div>
        }

        @if (TempData["Subtotal"] != null)
        {
            <div style="display: flex; justify-content: space-between; padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
                <strong>Tạm tính:</strong>
                <span>@TempData["Subtotal"]₫</span>
            </div>
        }

        @if (TempData["ShippingFee"] != null)
        {
            <div style="display: flex; justify-content: space-between; padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
                <strong>Phí giao hàng:</strong>
                <span>@TempData["ShippingFee"]₫</span>
            </div>
        }

        @if (TempData["Total"] != null)
        {
            <div style="display: flex; justify-content: space-between; padding: 12px 0; font-size: 20px; color: #dc2626;">
                <strong>Tổng cộng:</strong>
                <strong>@TempData["Total"]₫</strong>
            </div>
        }

        <div style="display: flex; justify-content: space-between; padding: 12px 0;">
            <strong>Thời gian đặt:</strong>
            <span>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</span>
        </div>
    </div>

    <div style="display: flex; gap: 15px; justify-content: center;">
        <a href="@Url.Action("Index", "Home")" style="padding: 15px 30px; background: #6b7280; color: white; text-decoration: none; border-radius: 10px; font-weight: 600;">
            <i class="fas fa-home"></i> Về trang chủ
        </a>
        <a href="@Url.Action("Order", "Food")" style="padding: 15px 30px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; text-decoration: none; border-radius: 10px; font-weight: 600;">
            <i class="fas fa-utensils"></i> Tiếp tục đặt món
        </a>
    </div>
</div>
