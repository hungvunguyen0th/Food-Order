@model IEnumerable<Asm_GD1.Models.Product>
@{
    ViewData["Title"] = "Quản lý món ăn";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-utensils"></i> Quản lý món ăn</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm món mới
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Hình ảnh</th>
                <th>Tên món</th>
                <th>Giá</th>
                <th>Giảm giá</th>
                <th>Đã bán</th>
                <th>Ngày tạo</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@Url.Content(item.ImageUrl)" alt="@item.Name" style="width:80px;height:80px;object-fit:cover;" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.BasePrice.ToString("N0") VNĐ</td>
                    <td>
                        @if (item.DiscountPercent > 0)
                        {
                            <span class="badge bg-danger">-@item.DiscountPercent%</span>
                        }
                    </td>
                    <td>@item.SoldCount</td>
                    <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProductID" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i> Sửa
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.ProductID" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
